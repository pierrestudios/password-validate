{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/components/*.ts", "src/components/**/*.ts", "src/components/**/*.tsx", "src/utils/*.ts", "src/types/*.ts"], 
}